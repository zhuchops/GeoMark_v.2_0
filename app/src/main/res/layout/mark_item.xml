<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/markItem">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/markNameView"

        style="@style/NameOfListTextStyle"
        android:text="title"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/coordinateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        style="@style/DescriptionOfListTextStyle"
        android:text="11.111111"

        app:layout_constraintTop_toBottomOf="@id/markNameView"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/bt_more_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_more"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>