<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="upperPanelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="upperPanelStyle.onMap">

    </style>

    <style name="upperPanelStyle.notOnMap">

    </style>

    <style name="NameOfListTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DescriptionOfListTextStyle">
        <item name="android:textColor">@color/mini_description_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="titleNamesButtonStyle">
        <item name="android:background">@color/invisible</item>
        <item name="android:textColor">@color/blackDemiInvisible</item>
        <item name="android:textSize">@dimen/titleNormalTextSize</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="titleNamesButtonStyle.Selected">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Theme.GeoMark.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="titleFromLayerView">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="regularTextFromText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="optionButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="botNavBarStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/nav_bar_bg_color</item>
        <item name="itemIconTint">@color/navigation_icon_color_selector</item>
        <item name="itemActiveIndicatorStyle">@color/invisible</item>
        <item name="android:textStyle">bold</item>
        <item name="itemTextColor">@color/navigation_label_color_selector</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemPaddingBottom">15dp</item>
        <item name="itemPaddingTop">15dp</item>
    </style>

    <style name="floatingActionButtonStyle" parent="ThemeOverlay.Material3.FloatingActionButton.Primary">
        <item name="tint">@color/action_button_inner_color</item>
        <item name="backgroundTint">@color/action_button_fill_color</item>
    </style>
    
    <style name="tabsStyle" parent="Widget.Material3.TabLayout">
        <item name="tabTextAppearance">@style/tabTextAppearance</item>
        <item name="tabBackground">@color/tab_bg_color</item>
        <item name="tabSelectedTextColor">@color/focused_element_color</item>
        <item name="tabIndicatorColor">@color/focused_element_color</item>
        <item name="tabIndicatorAnimationMode">linear</item>
        <item name="tabTextColor">@color/unfocused_element_color</item>
    </style>
    
    <style name="tabTextAppearance" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="searchBarStyle" parent="Widget.Material3.SearchBar">
        <item name="backgroundTint">@color/light_bg_color</item>
    </style>
    
    <style name="textButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/focused_element_color</item>
        <item name="iconTint">@color/focused_element_color</item>
    </style>

    <style name="addMarkButton" parent="textButtonStyle">
        <item name="android:text">@string/text_add_mark</item>
        <item name="icon">@drawable/ic_add</item>
    </style>

    <style name="searchViewStyle" parent="Widget.Material3.SearchView">
        <item name="backgroundTint">@color/white</item>
    </style>
</resources>