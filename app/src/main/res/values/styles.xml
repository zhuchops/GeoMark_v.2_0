<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="upperPanelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="upperPanelStyle.onMap">

    </style>

    <style name="upperPanelStyle.notOnMap">

    </style>

    <style name="NameOfListTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionOfListTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleNamesButtonStyle">
        <item name="android:background">@color/invisible</item>
        <item name="android:textColor">@color/blackDemiInvisible</item>
        <item name="android:textSize">@dimen/titleNormalTextSize</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="titleNamesButtonStyle.Selected">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Theme.GeoMark.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="titleFromLayerView">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="regularTextFromText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="optionButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="botNavBarStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/upper_menu_background</item>
        <item name="elevation">10dp</item>
        <item name="itemIconTint">@color/navigation_icon_color_selector</item>
        <item name="itemActiveIndicatorStyle">@color/navigation_icon_bg_color_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="itemTextColor">@color/navigation_label_color_selector</item>
    </style>
</resources>